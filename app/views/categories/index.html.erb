<div class="container">
  <h2 class="section-title"><%= t('categories.index.title') %></h2>

  <div class="row g-4">
    <% @categories.each do |category| %>
      <div class="col-md-4">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h5 card-title">
              <%= link_to category.name, category_path(category), class: 'text-decoration-none' %>
            </h3>
            <p class="card-text text-muted">
              <%= truncate(category.description, length: 100) %>
            </p>
            <small class="text-muted">
              <i class="bi bi-book"></i> 
              <%= t('categories.index.works_count', count: category.novels.count) %>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 