<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4"><%= t('sessions.new.title') %></h2>

          <%= form_with(url: login_path, local: true) do |f| %>
            <% if flash[:alert] %>
              <div class="alert alert-danger">
                <%= flash[:alert] %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :email, t('sessions.new.email'), class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.label :password, t('sessions.new.password'), class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit t('sessions.new.submit'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to t('sessions.new.register_link'), new_user_path, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
